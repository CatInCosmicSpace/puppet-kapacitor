[Unit]
Description=Time series data processing engine.
Documentation=https://docs.influxdata.com/kapacitor/
After=network.target

[Service]
User=<%= scope.lookupvar("kapacitor::user") %>
Group=<%= scope.lookupvar("kapacitor::group") %>
LimitNOFILE=65536
EnvironmentFile=-<%= scope.lookupvar("kapacitor::service_defaults") %>
ExecStart=/usr/bin/kapacitord -config <%= scope.lookupvar("kapacitor::configuration_path") %>/<%= scope.lookupvar("kapacitor::configuration_file") %> $KAPACITOR_OPTS
KillMode=process
Restart=on-failure

[Install]
WantedBy=multi-user.target
